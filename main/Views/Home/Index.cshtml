@{
    ViewData["Title"] = "Sign In";
}

@model RegisterViewModel

<div class="container">
    <div class="card">
        <div class="card-header">
            <h6>Sign In</h6>
        </div>
        <div class="card-body">
            <div class="form-group">
                @Html.LabelFor(x => x.Email)
                @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email" }})
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.FirstName)
                @Html.EditorFor(x => x.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = "FirstName" }})

            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.LastName)
                @Html.EditorFor(x => x.LastName, new { htmlAttributes = new { @class = "form-control", @placeholder = "LastName" }})
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Password)
                @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password" }})
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.ConfirmPassword)
                @Html.EditorFor(x => x.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "ConfirmPassword" }})
            </div>
        </div>
        <div class="card-footer">
            <a id="register-btn" href="http://localhost:8080/proyecto/series/index.html" class="btn btn-primary w-100">Register</a>
        </div>
    </div>
</div>